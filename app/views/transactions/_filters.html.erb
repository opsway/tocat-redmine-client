<table style="width:100%">
  <tbody>
    <tr>
      <td>
      <table id="filters-table">
        <tbody>
          <tr class="filter" id="comment">
            <td class='field'><%= label_tag(:search, l(:label_search)) %></td>
            <td class='operator'><%= text_field_tag(:search, params[:search]) %></td>
          </tr>
          <% if TocatUser.find_by_name(User.current.login).tocat_server_role.try(:name) != 'Developer' %>
          <tr class="filter" id="owner">
            <td class='field'><%= label_tag(:owner, l(:label_owner)) %></td>
            <td class='operator'><%= select_tag(:owner, options_for_select(@owners, selected: params[:owner]), include_blank: true) %></td>
          </tr>
          <% end %>
          <tr class="filter" id="account_type">
            <td class='field'><%= label_tag(:account_type, l(:label_account_type)) %></td>
            <td class='operator'><%= select_tag(:account_type, options_for_select([[l(:label_balance_type), 'balance'], [l(:label_payment_type), 'payroll'], [l(:label_money_type), 'money']], selected: params[:account_type]), include_blank: true) %></td>
          </tr>
        </tbody>
      </table>
      </td>
    </tr>
  </tbody>
</table>
